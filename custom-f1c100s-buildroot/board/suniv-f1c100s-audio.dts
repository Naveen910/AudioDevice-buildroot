/dts-v1/;
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/interrupt-controller/irq.h>
#include <dt-bindings/clock/suniv-ccu-f1c100s.h>
#include <dt-bindings/reset/suniv-ccu-f1c100s.h>
#include <dt-bindings/dma/sun4i-a10.h>


/ {
	model = "F1C100s Custom Audio Board";
	compatible = "custom,audio-board", "allwinner,suniv-f1c100s";
	#address-cells = <1>;
	#size-cells = <1>;
	interrupt-parent = <&intc>;

	aliases {
		serial0 = &uart0;
		i2c0 = &i2c0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	clocks {
		osc24M: clk-24M {
			#clock-cells = <0>;
			compatible = "fixed-clock";
			clock-frequency = <24000000>;
			clock-output-names = "osc24M";
		};

		osc32k: clk-32k {
			#clock-cells = <0>;
			compatible = "fixed-clock";
			clock-frequency = <32768>;
			clock-output-names = "osc32k";
		};
	};

	cpus {
		#address-cells = <1>;
		#size-cells = <0>;

		cpu@0 {
			compatible = "arm,arm926ej-s";
			device_type = "cpu";
			reg = <0x0>;
		};
	};

	/* 
	 * Main 3.3V Regulator 
	 * Used by MMC, Audio Amp, and Pull-ups 
	 */
	reg_vcc3v3: vcc3v3 {
		compatible = "regulator-fixed";
		regulator-name = "vcc3v3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
	};

	/* MAX98357A External Amplifier */
	max98357a: max98357a {
		compatible = "maxim,max98357a";
		#sound-dai-cells = <0>;
	};

	/* 
	 * Sound Card Configuration 
	 * Links the I2S controller (CPU) to the MAX98357A (Codec)
	 */
	sound {
    	compatible = "simple-audio-card";
    	simple-audio-card,name = "F1C100s-MAX98357A";
    	simple-audio-card,format = "i2s";
	
    	simple-audio-card,bitclock-master = <&i2s0>;
    	simple-audio-card,frame-master = <&i2s0>;
	
    	simple-audio-card,widgets =
    	    "Speaker", "External Speaker";
	
    	simple-audio-card,routing =
    	    "External Speaker", "Speaker";
	
    	simple-audio-card,cpu {
    	    sound-dai = <&i2s0>;
    	};
	
    	simple-audio-card,codec {
    	    sound-dai = <&max98357a>;
    	};
	};


	/*
	 * GPIO Keys Input Device
	 * Maps physical buttons B1-B11 from netlist to Linux Event Codes.
	 * Configured as Active Low (pressed = 0V) with Pull-Ups.
	 */
	gpio_keys {
		compatible = "gpio-keys";
		pinctrl-names = "default";
		autorepeat;

		/* B1 - Play/Pause - PD2 */
		button_play {
			label = "PlayPause";
			linux,code = <1>;
			gpios = <&pio 3 2 GPIO_ACTIVE_LOW>; /* Bank 3 (PD) Pin 2 */
			wakeup-source;
		};

		/* B2 - Stop - PD3 */
		button_stop {
			label = "Stop";
			linux,code = <2>;
			gpios = <&pio 3 3 GPIO_ACTIVE_LOW>;
		};

		/* B3 - Previous - PD4 */
		button_prev {
			label = "Previous";
			linux,code = <3>;
			gpios = <&pio 3 4 GPIO_ACTIVE_LOW>;
		};

		/* B4 - Next - PD5 */
		button_next {
			label = "Next";
			linux,code = <4>;
			gpios = <&pio 3 5 GPIO_ACTIVE_LOW>;
		};

		/* B5 - Volume Down - PD6 */
		button_voldn {
			label = "Volume Down";
			linux,code = <5>;
			gpios = <&pio 3 6 GPIO_ACTIVE_LOW>;
		};

		/* B6 - Volume Up - PD7 */
		button_volup {
			label = "Volume Up";
			linux,code = <6>;
			gpios = <&pio 3 7 GPIO_ACTIVE_LOW>;
		};

		/* B7 - Menu - PD15 */
		button_menu {
			label = "Menu";
			linux,code = <7>;
			gpios = <&pio 3 15 GPIO_ACTIVE_LOW>;
		};

		/* B8 - Back - PD16 */
		button_back {
			label = "Back";
			linux,code = <8>;
			gpios = <&pio 3 16 GPIO_ACTIVE_LOW>;
		};

		/* B9 - Enter - PD17 */
		button_enter {
			label = "Enter";
			linux,code = <9>;
			gpios = <&pio 3 17 GPIO_ACTIVE_LOW>;
		};

		/* B10 - Mute - PD18 */
		button_mute {
			label = "Mute";
			linux,code = <10>;
			gpios = <&pio 3 18 GPIO_ACTIVE_LOW>;
		};

		/* B11 - Mode - PD19 */
		button_mode {
			label = "Mode";
			linux,code = <11>;
			gpios = <&pio 3 19 GPIO_ACTIVE_LOW>;
		};
	};

	/* SOC DEFINITIONS */
	soc {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		/* Corrected Syntax: Removed non-breaking spaces in compatible string */
		sram-controller@1c00000 {
			compatible = "allwinner,suniv-f1c100s-system-control",
				     "allwinner,sun4i-a10-system-control";
			reg = <0x01c00000 0x30>;
			#address-cells = <1>;
			#size-cells = <1>;
			ranges;

			sram_d: sram@10000 {
				compatible = "mmio-sram";
				reg = <0x00010000 0x1000>;
				#address-cells = <1>;
				#size-cells = <1>;
				ranges = <0 0x00010000 0x1000>;

				/* Corrected Syntax: Removed non-breaking spaces */
				otg_sram: sram-section@0 {
					compatible = "allwinner,suniv-f1c100s-sram-d",
						     "allwinner,sun4i-a10-sram-d";
					reg = <0x0000 0x1000>;
					status = "disabled";
				};
			};
		};

		mmc0: mmc@1c0f000 {
			compatible = "allwinner,suniv-f1c100s-mmc", "allwinner,sun7i-a20-mmc";
			reg = <0x01c0f000 0x1000>;
			clocks = <&ccu 7>, <&ccu 29>, <&ccu 30>, <&ccu 31>;
			clock-names = "ahb", "mmc", "output", "sample";
			resets = <&ccu 5>;
			reset-names = "ahb";
			interrupts = <23>;
			pinctrl-names = "default";
			pinctrl-0 = <&mmc0_pins>;
			vmmc-supply = <&reg_vcc3v3>; /* Added missing regulator supply */
			bus-width = <4>;
			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;
		};

		/* Interrupt Controller */
		intc: interrupt-controller@1c20400 {
			compatible = "allwinner,suniv-f1c100s-ic";
			reg = <0x01c20400 0x400>;
			interrupt-controller;
			#interrupt-cells = <1>;
		};

		/* Clock Control Unit */
		ccu: clock@1c20000 {
			compatible = "allwinner,suniv-f1c100s-ccu";
			reg = <0x01c20000 0x400>;
			clocks = <&osc24M>, <&osc32k>;
			clock-names = "hosc", "losc";
			#clock-cells = <1>;
			#reset-cells = <1>;
		};

		/* Pin Controller (PIO) */
		pio: pinctrl@1c20800 {
			compatible = "allwinner,suniv-f1c100s-pinctrl";
			reg = <0x01c20800 0x400>;
			interrupts = <38>, <39>, <40>;
			
			clocks = <&ccu 19>, <&osc24M>, <&osc32k>;
			clock-names = "apb", "hosc", "losc";
			gpio-controller;
			interrupt-controller;
			#interrupt-cells = <3>;
			#gpio-cells = <3>;

			mmc0_pins: mmc0-pins {
				pins = "PF0", "PF1", "PF2", "PF3", "PF4", "PF5";
				function = "mmc0";
				drive-strength = <30>;
			};

			uart0_pe_pins: uart0-pe-pins {
				pins = "PE0", "PE1";
				function = "uart0";
			};

			i2c0_pe_pins: i2c0-pe-pins {
				pins = "PE11", "PE12";
				function = "i2c0";
				bias-pull-up;
			};

			i2s0_pd_pins: i2s0-pd-pins {
				pins = "PD8", "PD9", "PD11";
				function = "i2s";
			};

			
		};

		/* UART0 */
		uart0: serial@1c25000 {
			compatible = "snps,dw-apb-uart", "allwinner,suniv-f1c100s-uart", "allwinner,sun8i-a23-uart";
			reg = <0x01c25000 0x400>;
			interrupts = <1>;
			reg-shift = <2>;
			reg-io-width = <4>;
			clocks = <&ccu CLK_BUS_UART0>;
			resets = <&ccu RST_BUS_UART0>;
			status = "disabled";
		};




		/* I2C0 */
		i2c0: i2c@1c27000 {
			compatible = "allwinner,suniv-f1c100s-i2c", "allwinner,sun6i-a31-i2c";
			reg = <0x01c27000 0x400>;
			interrupts = <7>;
			clocks = <&ccu 24>;
			resets = <&ccu 11>;
			status = "okay";
			pinctrl-names = "default";
			pinctrl-0 = <&i2c0_pe_pins>;

			/* FM Radio - SI4703 */
			si4703: fm-radio@10 {
				compatible = "silabs,si470x";
				reg = <0x10>;
				/* Corrected Syntax: Removed invisible trailing character */
				reset-gpios = <&pio 3 0 GPIO_ACTIVE_LOW>; /* PD0 */
				/* Added Interrupt configuration */
				interrupt-parent = <&pio>;
				interrupts = <3 1 IRQ_TYPE_EDGE_FALLING>; /* Bank 3 (PD) Pin 1 */
			};
		};

		/* I2S0 */
		i2s0: i2s@1c22000 {
			compatible = "allwinner,suniv-f1c100s-i2s", "allwinner,sun4i-a10-i2s";
			#sound-dai-cells = <0>;
			reg = <0x01c22000 0x400>;
			interrupts = <28>;
			clocks = <&ccu 22>, <&ccu 47>;
			clock-names = "apb", "mod";
			resets = <&ccu 9>;
			dmas = <&dma 3>, <&dma 3>;
			dma-names = "rx", "tx";
			status = "okay";
			pinctrl-names = "default";
			pinctrl-0 = <&i2s0_pd_pins>;
		};

		timer@1c20c00 {
			compatible = "allwinner,suniv-f1c100s-timer";
			reg = <0x01c20c00 0x90>;
			interrupts = <13>, <14>, <15>;
			clocks = <&osc24M>;
		};

		/* Corrected Syntax: Removed non-breaking spaces */
		wdt: watchdog@1c20ca0 {
			compatible = "allwinner,suniv-f1c100s-wdt",
				     "allwinner,sun6i-a31-wdt";
			reg = <0x01c20ca0 0x20>;
			interrupts = <16>;
			clocks = <&osc32k>;
		};

		/* DMA Controller */
		dma: dma-controller@1c02000 {
			compatible = "allwinner,suniv-f1c100s-dma";
			reg = <0x01c02000 0x1000>;
			interrupts = <18>;
			clocks = <&ccu 6>;
			resets = <&ccu 4>;
			/* 
			 * Critical Update: sun4i/suniv DMA bindings typically use 2 cells.
			 * <Phandle> <Request ID> <Flags>
			 * If your specific kernel/dma-driver version enforces 1 cell, revert to .
			 * Standard Mainline expects .
			 */
			#dma-cells = <1>;
		};
	};
};